
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # 1. Если файл api.php существует, отдаем его напрямую и прекращаем поиск
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^api\.php$ - [L]

  # 2. Если запрашивается существующий файл (картинка, скрипт), отдаем его
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 3. Все остальное отправляем на index.html для работы React Router
  RewriteRule . /index.html [L]
</IfModule>
