<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Правило №1: Если запрос идет к любому .php файлу - НЕ ПЕРЕНАПРАВЛЯТЬ
  RewriteRule ^(.*)\.php$ - [L]

  # Правило №2: Если файл или папка реально существуют - НЕ ПЕРЕНАПРАВЛЯТЬ
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Правило №3: Все остальное на index.html
  RewriteRule . /index.html [L]
</IfModule>